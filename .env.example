# Database Configuration
DATABASE_URL="mysql://user:password@localhost:3306/coolblue_monitor"

# MySQL Docker Settings (for docker-compose)
MYSQL_ROOT_PASSWORD=secure_root_password
MYSQL_DATABASE=coolblue_monitor
MYSQL_USER=coolblue
MYSQL_PASSWORD=secure_user_password

# Server Configuration
NODE_ENV=production
PORT=3000

# JWT Secret (Generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration (Gmail)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# Optional: Alternative Email Providers
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password

# Optional: Analytics
VITE_ANALYTICS_ENDPOINT=
VITE_ANALYTICS_WEBSITE_ID=

# Optional: Scraping Configuration
# SCRAPER_INTERVAL_MINUTES=5
# SCRAPER_TIMEOUT_MS=15000
